<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>App</title>
    <link rel="stylesheet" href="/css/bootstrap.css">
    <link rel="stylesheet" href="/css/narrow-jumbotron.css">
    <script src="/js/p5.min.js"></script>
    <script src="/js/addons/p5.dom.min.js"></script>
    <script src="/js/addons/p5.sound.min.js"></script>
  </head>
  <body>
    <div class="container">
      <header class="header clearfix">
        <nav>
          <ul class="nav nav-pills float-right">
            {{#if user}}
              <li class="nav-item">
                <a class="nav-link active" href="/home">Home</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/scores">Scores</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">Logout</a>
              </li>
            {{/if}}
          </ul>
        </nav>
        <h3 class="text-muted">Chinese Checkers</h3>
      </header>

      {{#if success_msg}}
        <div class="alert alert-success">{{success_msg}}</div>
      {{/if}}
      {{#if error_msg}}
        <div class="alert alert-danger">{{error_msg}}</div>
      {{/if}}
      {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
      {{/if}}

      {{{body}}}

      <footer class="footer">
        <p>&copy; Chinese Checkers 2017</p>
      </footer>

    </div> <!-- /container -->
  </body>
</html>
